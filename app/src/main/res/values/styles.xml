<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!--状态栏颜色 -->
        <item name="colorPrimaryDark">@color/ml_primary_dark</item>
        <!--Toolbar 颜色-->
        <item name="colorPrimary">@color/ml_primary</item>

        <!--表示CheckBox、EditText、Switch、Spinner、RadioButton等控件激活时候的色调-->
        <item name="colorAccent">@color/ml_accent</item>
        <!--同上-->
        <item name="colorControlActivated">@color/ml_accent</item>

        <!--<item name="android:textColor">@color/ml_text_black</item>-->


    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>


    <!-- Toolbar弹出菜单样式 -->
    <style name="MLTheme.PupopMenu" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColor">#232323</item>
    </style>

    <style name="MLTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--Toolbar字体颜色-->
        <item name="colorControlNormal">@color/ml_text_primary</item>
        <item name="android:textColor">@color/ml_text_primary</item>
    </style>
</resources>
